<p id="notice"><%= notice %></p>

<h1>Listing Albums</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= link_to album.title, album %></td>
        <td><%= link_to 'Detalhes', album %></td>
        <td><%= link_to 'Editar', edit_album_path(album) %></td>
        <td><%= link_to 'Apagar', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

