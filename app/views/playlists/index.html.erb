<p id="notice"><%= notice %></p>

<h1>Suas Playlists</h1>
<table class="table">
  <thead>
    <tr>
      <th>Título</th>
      <th>Descrição</th>
      <th>User</th>
      <th>Private</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% if user_signed_in? %>
      <% @own_playlists.each do |playlist| %>
        <tr>
          <td><%= playlist.title %></td>
          <td><%= playlist.description %></td>
          <td><%= playlist.user.email %></td>
          <td><%= playlist.private %></td>
          <td><%= link_to 'Show', playlist %></td>
          <td><%= link_to 'Edit', edit_playlist_path(playlist) %></td>
          <td><%= link_to 'Destroy', playlist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% else %>
      <% @public_playlists.each do |playlist| %>
        <tr>
          <td><%= playlist.title %></td>
          <td><%= playlist.description %></td>
          <td><%= playlist.user.email %></td>
          <td><%= playlist.private %></td>
          <td><%= link_to 'Show', playlist %></td>
          <td><%= link_to 'Edit', edit_playlist_path(playlist) %></td>
          <td><%= link_to 'Destroy', playlist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= link_to 'Nova Playlist', new_playlist_path, class: "btn btn-default btn-lg" %>
</div>

<h3>Playlists de outros usuários</h3>
<table class="table">
  <thead>
    <tr>
      <th>Título</th>
      <th>Descrição</th>
      <th>User</th>
      <th>Private</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>

    <% @not_own_playlists.each do |playlist| %>
      <tr>
        <td><%= playlist.title %></td>
        <td><%= playlist.description %></td>
        <td><%= playlist.user.email %></td>
        <td><%= playlist.private %></td>
      </tr>
    <% end %>

  </tbody>
</table>
