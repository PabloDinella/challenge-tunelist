<p id="notice"><%= notice %></p>

<h1>Listing Musics</h1>

<table class="table">
  <thead>
    <tr>
      <th>Título</th>
      <th>Artista/Banda</th>
      <th>Gênero</th>
      <th>Album</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @musics.each do |music| %>
      <tr>
        <td><%= music.title %></td>
        <td><%= music.author %></td>
        <td><%= music.kind %></td>
        <td><%= music.album.title %></td>
        <!-- <td><%= link_to 'Detalhes', music %></td> -->
        <td><%= link_to 'Editar', edit_music_path(music) %></td>
        <td><%= link_to 'Apagar', music, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<div class="text-center">
  <%= link_to 'Nova Música', new_music_path, class: "btn btn-default btn-lg" %>
</div>
